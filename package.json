{
  "name": "utmap-times",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next",
    "prebuild": "npm-run-all graphql:codegen prebuild-script lint",
    "build": "next build",
    "graphql:codegen": "apollo client:codegen --target typescript --outputFlat",
    "graphql:codegen:watch": "apollo client:codegen --watch --target typescript --outputFlat",
    "prebuild-script": "ts-node --project scripts/tsconfig.json scripts/prebuild",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "type-check": "tsc"
  },
  "dependencies": {
    "@apollo/client": "^3.3.19",
    "@rehooks/local-storage": "^2.4.1",
    "autoprefixer": "^10.2.6",
    "clsx": "^1.1.1",
    "cross-fetch": "^3.1.4",
    "dayjs": "^1.10.5",
    "marked": "^2.0.7",
    "next": "^10.2.3",
    "nprogress": "^0.2.0",
    "postcss": "^8.3.0",
    "react": "^17.0.2",
    "react-datocms": "^1.6.3",
    "react-dom": "^17.0.2",
    "react-icons": "^4.2.0",
    "react-intersection-observer": "^8.32.0",
    "sanitize-html": "^2.4.0",
    "styled-components": "^5.3.0",
    "superstruct": "^0.15.2",
    "tailwindcss": "^2.1.4",
    "use-local-storage-state": "^10.0.0"
  },
  "devDependencies": {
    "@types/gtag.js": "^0.0.5",
    "@types/marked": "^2.0.3",
    "@types/node": "^15.12.1",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^17.0.9",
    "@types/react-dom": "^17.0.6",
    "@types/sanitize-html": "^2.3.1",
    "@types/styled-components": "^5.1.9",
    "apollo": "^2.33.4",
    "dotenv": "^10.0.0",
    "eslint": "^7.28.0",
    "eslint-config-airbnb-typescript-prettier": "^4.2.0",
    "husky": "^4.3.8",
    "lint-staged": "^11.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "eslint"
    ]
  }
}
